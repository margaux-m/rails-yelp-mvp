<h1><%= @restaurant.name %></h1>

<p>Address: <%= @restaurant.address %></p>
<p>Phone number: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %></p>

<p><%= "Reviews:" if @restaurant.reviews.length > 0 %></p>
<ul class='list-group'>
  <% @restaurant.reviews.each do |review| %>
    <li class='list-group-item'>Rating: <%= review.rating %> - Comment: '<%= review.content %>'</li>
  <% end %>
</ul>

<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.input :content %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
<hr>
<%= link_to 'Back', restaurants_path, class: "btn btn-secondary"%>
